<div class="modal fade" id="edit_tag_Modal" tabindex="-1" role="dialog" aria-hidden="true">  
  <div class="modal-dialog">
    <div class="modal-content">
      <%= form_with(model: @tag, remote: true) do |form| %>
        <div class="modal-header">
          <h5 class="modal-title">タグの追加</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>

        <div class="modal-body">
          <div class="form-group field">
            <%= form.label "名前" , class: "form-control-label"%>
            <%= form.text_field :name, class: "form-control"%>
          </div>
          <%= form.submit class: "btn btn-primary"%>
        </div>

        <div class="modal-header">
          <h5 class="modal-title" style="margin: 10px 0px 10px 0px">タグの削除</h5>
        </div>

        <div class="modal-body">
          <%= render 'index', { tag: @tags } %>          
        </div>

        <div class="modal-footer actions">
        </div>
      <% end %>
    </div>
  </div>
</div>