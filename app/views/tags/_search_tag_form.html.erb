<div class="modal fade" id="search_tag_Modal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">タグの絞り込み</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= link_to "全て表示", "/tags_reset", class: 'btn btn-default', remote: true %>
        <% @tags.each do |tag| %>
            <%= link_to tag.name, "/tags/search/#{tag.id}", class: 'btn btn-default', remote: true %>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>